@page
@model RoadmapModel
@{
    Layout = "_ZoomableSvgLayout";
    ViewData["Title"] = "Carnet de route";
}

@section style {
    <style>
        nav {
            background: #4285F4;
            padding: 5px;
            height: 40px;
        }

        nav a:first-child
        {
            margin-right: 10px;
        }

        .landmark-info 
        {
            display:none;
        }

        p
        {
            font-family: Arial, Helvetica, sans-serif;
        }

        p.center
        {
            text-align: center;
        }

        #magicarpe
        {
            max-height: 300px;
            max-width: 215px;
        }

        .landmark-info a
        {
            color: white
        }

        @@media screen 
        {
            .landmark-info.current 
            {
                display:block;
            }

            .landmark-info p
            {
                margin-left: 1em;
                margin-right: 1em;
            }

            #no-click
            {
                display: block;
            }
        }

        @@media print
        {
            .landmark-info.print 
            {
                display: block;
                break-inside: avoid;
                border-bottom: solid #888 1px;
            }
        }
    </style>
}

@section nav {
    <nav><a href="/Home/Roadmap2"><!--Retour--><img src="/img/roadmap/left-arrow.png" alt="flèche retour" /></a> <a id="print-btn" style="display:none" href="javascript:window.print()"><!--Imprimer cette page--><img src="/img/roadmap/print_icon.png" alt="icône imprimer"/></a></nav>
}

@section aside {
